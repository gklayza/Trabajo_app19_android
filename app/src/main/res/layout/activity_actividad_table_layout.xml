                android:layout_height="50dp"
                android:layout_width="100dp"
                android:textSize="40dp" />
        </TableRow>

        <TableRow>
            <TextView android:text=" 2.1"
                android:textSize="40dp" />
            <TextView android:text=" 2.2"
                android:textSize="40dp" />
